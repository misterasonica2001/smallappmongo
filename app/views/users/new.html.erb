<h1>Inscriere</h1>

<%= form_for(@user) do |f| %>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label "Nume" %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label "Parola" %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label "Repeta parola" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
	<div class="actions">
		<%= f.submit "Inscrie-te" %>
	</div>
<% end %>	